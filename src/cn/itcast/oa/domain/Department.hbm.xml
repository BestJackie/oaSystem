<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="cn.itcast.oa.domain">

	<class name="Department" table="itcast_department">
		<id name="id">
            <generator class="native"/>
		</id>
		<property name="name"/>
		<property name="description"/>

		
		<!-- users属性，本类与User的一对多-->
		<set name="users">
			<key column="departmentId"></key>
			<one-to-many class="User"></one-to-many>
		</set>
		<many-to-one name="parent" class="Department" column="parentId" lazy="false"></many-to-one>

		<set name="children" cascade="delete" lazy="false">
			<key column="parentId"></key>
			<one-to-many class="Department"></one-to-many>
		</set>
		
		<!-- roles属性，本类与Role的多对多
		<set name="roles" table="itcast_user_role" lazy="false">
			<key column="userId"></key>
			<many-to-many class="Role" column="roleId"></many-to-many>
		</set>-->
		
		
	</class>
	
</hibernate-mapping>
